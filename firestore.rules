rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helpers de autenticación y roles
    function signedIn() {
      return request.auth != null;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return signedIn() && (getUserRole() == 'administrador' || getUserRole() == 'adminsitrador');
    }

    function isSecretary() {
      return signedIn() && getUserRole() == 'secretaria';
    }

    function isProfessional() {
      return signedIn() && getUserRole() == 'profesional';
    }

    // User profiles
    match /userProfiles/{userId} {
      // Cualquier usuario autenticado puede leer perfiles (necesario para listar profesionales)
      allow read: if signedIn();
      allow create: if signedIn() && isOwner(userId);
      // Admin puede actualizar cualquier perfil; el dueño puede actualizar salvo el campo role
      allow update: if signedIn() && (
        isAdmin() ||
        (isOwner(userId) && request.resource.data.role == resource.data.role)
      );
      allow delete: if isAdmin();
    }

    // Patients
    match /patients/{patientId} {
      allow read: if signedIn();
      allow create: if signedIn() && (
        isAdmin() ||
        (isProfessional() && request.resource.data.userId == request.auth.uid)
      );
      allow update: if signedIn() && (isAdmin() || isOwner(resource.data.userId));
      allow delete: if isAdmin();
    }

    // Appointments (turnos y eventos personales)
    match /appointments/{appointmentId} {
      allow read: if signedIn();
      allow create: if signedIn() && (
        // Admin y secretaria crean turnos para cualquiera
        isAdmin() ||
        isSecretary() ||
        // Creacion de turnos propios aunque falte perfil/rol
        (request.resource.data.userId == request.auth.uid)
      );
      allow update: if signedIn() && (
        isAdmin() ||
        isSecretary() ||
        isOwner(resource.data.userId)
      );
      allow delete: if signedIn() && (
        isAdmin() ||
        isOwner(resource.data.userId)
      );
    }

    // Payments
    match /payments/{paymentId} {
      allow read: if signedIn();
      allow create: if signedIn()
        && (isAdmin() || isSecretary() || isOwner(request.resource.data.userId))
        && request.resource.data.keys().hasAll(['patientId', 'patientName', 'amount', 'method', 'status', 'date', 'consultationType', 'userId', 'createdAt', 'updatedAt']);
      allow update: if signedIn() && (isAdmin() || isSecretary() || isOwner(resource.data.userId));
      allow delete: if signedIn() && (isAdmin() || isOwner(resource.data.userId));
    }

    // Insurances
    match /insurances/{insuranceId} {
      allow read: if signedIn() && (isAdmin() || isSecretary() || isOwner(resource.data.userId));
      allow create: if signedIn() && (isAdmin() || (isProfessional() && request.resource.data.userId == request.auth.uid));
      allow update: if signedIn() && (isAdmin() || isOwner(resource.data.userId));
      allow delete: if isAdmin();
    }

    // Authorizations
    match /authorizations/{authorizationId} {
      allow read: if signedIn() && (isAdmin() || isSecretary() || isOwner(resource.data.userId));
      allow create: if signedIn() && (isAdmin() || (isProfessional() && request.resource.data.userId == request.auth.uid));
      allow update: if signedIn() && (isAdmin() || isOwner(resource.data.userId));
      allow delete: if isAdmin();
    }

    // Medical history
    match /medicalHistory/{historyId} {
      allow read: if signedIn() && (isAdmin() || isSecretary() || isOwner(resource.data.userId));
      allow create: if signedIn() && (isAdmin() || (isProfessional() && request.resource.data.userId == request.auth.uid));
      allow update: if signedIn() && (isAdmin() || isOwner(resource.data.userId));
      allow delete: if isAdmin();
    }

    // Blocked slots (eventos personales para bloquear agenda)
    match /blockedSlots/{slotId} {
      allow read: if signedIn() && (isAdmin() || isSecretary() || isOwner(resource.data.userId));
      allow create: if signedIn() && isAdmin() && request.resource.data.userId == request.auth.uid;
      allow update: if signedIn() && isAdmin() && isOwner(resource.data.userId);
      allow delete: if signedIn() && isAdmin() && isOwner(resource.data.userId);
    }

    // Offices
    match /offices/{officeId} {
      allow read: if signedIn() && (isAdmin() || isSecretary() || isOwner(resource.data.userId));
      allow create: if signedIn() && isAdmin() && request.resource.data.userId == request.auth.uid;
      allow update: if signedIn() && isAdmin() && isOwner(resource.data.userId);
      allow delete: if signedIn() && isAdmin() && isOwner(resource.data.userId);
    }

    // Follow-up reasons
    match /followUpReasons/{reasonId} {
      allow read: if signedIn() && (isAdmin() || isSecretary() || isOwner(resource.data.userId));
      allow create: if signedIn() && (
        isAdmin() ||
        isSecretary() ||
        (isProfessional() && request.resource.data.userId == request.auth.uid)
      );
      allow update: if signedIn() && (isAdmin() || isSecretary() || isOwner(resource.data.userId));
      allow delete: if signedIn() && (isAdmin() || isOwner(resource.data.userId));
    }

    // Schedule Preferences
    match /schedulePreferences/{preferenceId} {
      // Todos los usuarios autenticados pueden ver la agenda base
      allow read: if signedIn();
      // Solo admin puede configurar la agenda base
      allow write: if isAdmin();
    }

    // Pending users (invitaciones)
    match /pendingUsers/{email} {
      // Admin puede crear invitaciones
      allow create: if isAdmin();
      // Usuarios autenticados pueden leer su propia invitación pendiente
      allow read: if signedIn() && request.auth.token.email == email;
      // Usuarios autenticados pueden eliminar su propia invitación después de registrarse
      allow delete: if signedIn() && request.auth.token.email == email;
    }

    // Chat Conversations
    match /conversations/{conversationId} {
      // Permitir lectura si el usuario es participante
      allow read: if signedIn() && request.auth.uid in resource.data.participants;
      // Permitir crear si el usuario se incluye como participante
      allow create: if signedIn() && request.auth.uid in request.resource.data.participants;
      // Permitir actualizar (ej. lastMessage) si es participante
      allow update: if signedIn() && request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        // Permitir lectura si es participante de la conversacion padre
        allow read: if signedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        // Permitir enviar mensaje si es el sender y tambien participante
        allow create: if signedIn() 
          && request.auth.uid == request.resource.data.senderId
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
      }
    }

    // Google Calendar tokens (solo servidor)
    match /googleCalendarTokens/{id} {
      allow read, write: if false;
    }

    match /googleCalendarOAuthStates/{id} {
      allow read, write: if false;
    }

    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
